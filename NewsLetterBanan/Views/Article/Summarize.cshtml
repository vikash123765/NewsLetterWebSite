@{
    ViewData["Title"] = "Summarized Article";
}

<h2>Summarized Article</h2>

@if (ViewBag.SummarySentences != null && ViewBag.SummarySentences.Count > 0)
{
    <ul>
        @foreach (var sentence in ViewBag.SummarySentences)
        {
            <li>@sentence</li>
        }
    </ul>
}
else
{
    <p>No summary available.</p>
}

 <a href="@Context.Request.Headers["Referer"]" class="btn btn-primary">Back to Articles/Article</a>
