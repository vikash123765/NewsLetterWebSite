@{
    ViewData["Title"] = "Chat";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">What do you want to know?</h2>

                <form asp-action="Index">
                    <div class="input-group mb-3">
                        <input type="text" name="UserMessage" class="form-control" placeholder="Type your message..." value="@Model.UserMessage" />
                        <button class="btn btn-primary" type="submit">Send</button>
                        <button class="btn btn-secondary ms-2" type="reset" onclick="clearResponse()">Reset</button>
                    </div>
                </form>

                @if (!string.IsNullOrEmpty(Model.Response))
                {
                    <div class="alert alert-info mt-3" id="responseContainer">
                        <h5 class="fw-bold">Here is the response:</h5>
                        <p>@Model.Response</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function clearResponse() {
        document.getElementById("responseContainer").style.display = "none";
    }
</script>
